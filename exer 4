#include<stdio.h>
#include<stdlib.h>
int main(){
	int lin, col;
	float soma = 0;
	float valores [2] [5];
printf("digite os valores da matriz:\n");
for (lin =0; lin <2; lin ++){
	for(col = 0; col < 5; col ++ ){
		printf("valor da linha [%d] coluna [%d]: ", lin, col);
		scanf("%f", & valores[lin][col]);
	    soma += valores [lin][col];
	}
}
system("cls");
printf("\n valores da matriz: \n");
for(lin = 0; lin < 2; lin++){
	for(col = 0; col < 5; col ++){
		printf("%10.1f", valores [lin][col]);
	}
    printf("\n");
	
}
printf("soma dos valores:  %9.2f\n", soma);
return 0;
}
