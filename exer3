#include<stdio.h>
const int N = 5;
int main(){
	int i;
	float maior, valor[N];
	for (i = 0; i < N; i ++){
	printf("digite o valor: ");
	scanf("%f", &valor[i]);
	}
	maior = valor[0];
	for (i= 0; i < N; i ++){
		if( valor [i] > maior)
		 maior = valor [i];
	}
	printf("\nValores do vetor: ");
	for (i =0; i < N; i ++){
		printf("\nPosicao %d = %.2f", i, valor[i]);
	}
	printf("\n\nMaior valor %.2f\n", maior);
}
